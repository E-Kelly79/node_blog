<h1>Create Categories</h1>
<div class="row">

    <div class="col-sm-4">
        <form action="/admin/categories/create" method="post">
            <div class="for-group">
                <label for="name">Name</label>
                <input type="text" name="name" placeholder="Enter Title" class="form-control">
            </div>
            <br>
            <div class="form-group">
                <button class="btn btn-primary">Create Category</button>
            </div>
        </form>
    </div>
</div>
<hr>
<h1>Create Categories</h1>
<div class="row">

    <div class="col-sm-8">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Edit</th>
                <th>Delete</th>

            </tr>
            </thead>
            <tbody>
            {{#each categories}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a></td>
                    <td>
                        <form action="/admin/categories/{{id}}?_method=DELETE" method="post">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            {{/each}}

            </tbody>
        </table>
    </div>
</div>
