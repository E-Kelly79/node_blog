<h1>Edit Posts</h1>

<form action="/admin/posts/edit/" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" value="{{post_title}}">
    </div>

    <div class="form-group">
        <label for="file">Upload File</label>
        <input type="file" class="form-control"  id="file" name="file">
    </div>

    <div class="form-group">
        <label for="title">Category</label>
        <select class="form-control" id="" name="category">

        </select>
    </div>

    <div class="form-group">
        <label for="title">Title</label>
        <select  class="form-control" id="status" name="status">

        </select>
    </div>

    <div class="form-check">
        <label for="allowComments">
            <input type="checkbox" class="form-check-input" id="allowComments" name="allowComments">
            Allow Comments
        </label>
    </div>

    <div class="form-group">
        <label for="body">Description</label>
        <textarea cols="30" rows="10" class="form-control" id="body" name="body">{{post.body}}</textarea>
    </div>

    <button type="submit">Submit</button>

</form>
