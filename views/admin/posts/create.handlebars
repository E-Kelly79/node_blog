<h1>Create Posts</h1>


    <div class="alert alert-danger">

    </div>

<form action="/admin/posts/create" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Enter Title" >

    </div>


    <div class="form-group">
        <label for="file">Upload File</label>
        <input type="file" class="form-control"  id="file" name="file">
    </div>

    <div class="form-group">
        <label for="title">Category</label>
        <select  class="form-control" id="" name="category">

                <option value="">Public</option>
        </select>
    </div>

    <div class="form-group">
        <label for="title">Title</label>
        <select  class="form-control" id="status" name="status">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
            <option value="default" selected>Please select an option</option>
        </select>
    </div>

    <div class="form-check">
        <label for="allowComments">
            <input type="checkbox" class="form-check-input" id="allowComments" name="allowComments">
            Allow Comments
        </label>
    </div>

    <div class="form-group">
        <label for="body">Description</label>
        <textarea cols="30" rows="10" class="form-control" id="body" name="body" placeholder="Eneter Description"></textarea>
    </div>
    <button type="submit">Submit</button>

</form>

