<h1>Comments</h1>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Author</th>
        <th>Date</th>
        <th>Delete Comment</th>
    </tr>
    </thead>
    <tbody>
    {{#each comments}}
        <tr>
            <td>{{id}}</td>
            <td>{{user.name}}</td>
            <td>{{formatDate date 'Do MMM YYYY'}}</td>
            <td>
                <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>

        </tr>
    {{/each}}


    </tbody>
</table>

